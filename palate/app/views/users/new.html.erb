<h1>You Just Couldn't Resist, Could You?</h1>

<%= form_for @user do |f| %>
	<div>
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
	</div>

	<div>
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
	</div>

	<div>
		<%= f.label :username %>
		<%= f.text_field :username %>
	</div>

	<div>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>

	<div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>

	<%= f.submit %>
<% end %>

<p> Already Registered? <%= link_to "Login", login_path %> </p>


<div class="wrapper">

<h1>Register</h1>

<%= form_for @user do |f| %>
	<div>
		<%= f.label :first_name %>
		<%= f.text_field :first_name , class: "form-control"%>
	</div>

	<div>
		<%= f.label :last_name %>
		<%= f.text_field :last_name,  class: "form-control" %>
	</div>

	<div>
		<%= f.label :username %>
		<%= f.text_field :username,  class: "form-control" %>
	</div>

	<div>
		<%= f.label :email %>
		<%= f.text_field :email, class: "form-control" %>
	</div>

	<div>
		<%= f.label :password %>
		<%= f.password_field :password, class: "form-control" %>
	</div>

	<%= f.submit %>
<% end %>

</div>
<p> Already Registered? <%= link_to "Login", login_path %> </p>


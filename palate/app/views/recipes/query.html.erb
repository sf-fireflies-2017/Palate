
<%if params[:type] == '' %>
	<h3>Showing all recipes: (<%=@recipes.length%> found)<h3>
<%else%>
	<h3>Your results for: '<%=params[:type]%>' (<%=@recipes.length%> found)<h3>
<%end%>



<%@recipes.each do |recipe| %>
		
		<li> <%=link_to "#{recipe.name}", recipe_path(recipe) %> 

		<% if recipe.ratings.any? %> 
			Average Rating: <%=recipe.average_rating%>
		<% end %> 

		<%= link_to "Edit", edit_recipe_path(recipe) %> 

		<%= link_to "Delete", recipe_path(recipe), method: :delete, data: { confirm: "Are you sure?"} %>  </li>

<%end%>
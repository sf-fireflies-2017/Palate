<% if @recipe.ratings.any? %>
  <h1><%= @recipe.name.upcase %> | Rating: <%= @recipe.ratings.first.value %></h1>
<% else %>
  <h1><%= @recipe.name.upcase %></h1>
<% end %>

<h2><%= @recipe.cuisine %> | <%= @recipe.course_type.capitalize %></h2>

<h3> Total Prep and Cook Time: <%= @recipe.time %> | Difficulty Level: <%= @recipe.difficulty_level %></h3>

<h4>Ingredients</h4>
<ul>
<h4><% @ingredients.each do |ingredient| %>
  <li><%= ingredient.item %>: <%= ingredient.amount %> <%= ingredient.metric %></li>
<% end %></h4>
</ul>

<h4>Instructions:</h4>
<%= @recipe.instructions %>

<h5> Submitted By: <%= @creator %></h5>
<br>

<% if @recipe.creator.id = current_user.id %>
  <%= button_to "Edit Recipe", edit_recipe_path(@recipe), method: :get %>
  <%= button_to "Delete Recipe", recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure?"} %>
  <% else %>
  <%= button_to "Add Recipe", new_recipe_path, method: :get %>
<% end %>

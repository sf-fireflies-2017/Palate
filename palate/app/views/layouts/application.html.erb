
<!DOCTYPE html>

<html lang="en">
<head>
  <title>Palate</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <%= stylesheet_link_tag "application", media: "all" %>
   <%= javascript_include_tag "application"%>
  <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script> -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <img src="app/assets/images/logo.jpg">
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <% if current_user %>
            <li > <%= link_to "#{current_user.username}", user_path(current_user) %></li>
            <li><%= link_to "Log Out", logout_path %></li>
            <li><%= link_to "Home", root_path %></li>
        <% else %>
            <h1 style="color:white;">Palate</h1>
            <li><%= link_to "Register", new_user_path %></li>
            <li><%= link_to "Log In", login_path %></li>
            <li id="text-nav"><%= link_to "Home", root_path %></li>
        <% end %>
      </ul>
  </div>
</nav>
  
<div class="container-fluid text-center">    
  <div class="row content">
    <div class="col-sm-2 sidenav">
    
      <div class="well btncolor">
        <p><a href="/recipes/query?type=Appetizer">Appetizer</a></p>
      </div>

      <div class="well btncolor">
        <p><a href="/recipes/query?type=Salad">Salad</a></p>
      </div>

       <div class="well btncolor">
        <p><a href="/recipes/query?type=Entree">Entree</a></p>
      </div>

       <div class="well btncolor">

        <p><a href="/recipes/query?type=Dessert">Dessert</a></p>
      </div>

    </div>
    <div class="col-sm-8 text-left"> 
      
      <hr>
      <div id="yield">
        <h2></h2>
        <%= yield %> 
      </div>
      <hr>
    </div>
    <div class="col-sm-2 sidenav">
    </div>
  </div>
</div>

<footer class="container-fluid text-center footer">
  <p id="footr_text">Footer Text</p>
</footer>

</body>
</html>


<!DOCTYPE html>
<html>
  <head>
    <title>Palate</title>
    <%= csrf_meta_tags %>

  </head>

  <body>
    <% if current_user %>
      <%= link_to "#{current_user.username}", user_path(current_user) %>
      <%= link_to "Log Out", logout_path %>
      <%= link_to "Home", root_path %>
    <% else %>
      <%= link_to "Sign Up", new_user_path %>
      <%= link_to "Log In", login_path %>
      <%= link_to "Home", root_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
